
<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign teaching = data[1] | sort: 'order' %}
  {% for content in teaching %}
    <li class="list-group-item">
      <h6 class="title font-weight-bold">
        {{ content.position }}
      </h6>
      {% if content.institution %}
        <h6 style="font-size: 0.95rem">{{ content.institution }}</h6>
      {% endif %}
      {% if content.location %}
        <p class="location">
          <i class="fa-solid fa-location-dot iconlocation"></i>
          {{ content.location }}
        </p>
      {% endif %}
      {% if content.semesters %}
        <div style="padding-bottom: 10px;">
          <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ semesters }} </span>
        </div>
      {% endif %}
      <p style="font-size: 0.95rem; font-style: italic">{{ content.course }}</p>
      <ul class="items">
        {% for item in content.highlights %}
          <li>
            <span class="item">{{ item }}</span>
          </li>
        {% endfor %}
      </ul>
    </li>
  {% endfor %}
</ul>
